@model List<CryptoWallet.Models.CurrencyRateViewModel>
@{
    ViewBag.Title = "Live rates of our available currencies";
}
<h2>@ViewBag.Title.</h2>
<br />
<p class="lead">@DateTime.Now.ToString("HH:mm:ss")</p>
<br />

@if (Model.Count == 0)
{
    <p>There was an error processing the rates for today.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>From</th>
                <th>Currency</th>
                <th>Rate</th>
            </tr>
        </thead>
        @foreach (CryptoWallet.Models.CurrencyRateViewModel a in Model)
        {
            <tr>
                <td>EUR</td>
                <td>@a.Currency</td>
                <td>@a.Rate</td>
            </tr>
        }
    </table>
}

<address>
    <strong>Live rates:</strong>   <a href="https://min-api.cryptocompare.com">Here</a><br />
</address>

<script type="text/javascript">
    setTimeout(function () {
        location.reload()
    }, 5000);
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}