@model CryptoWallet.Models.OpenAccountViewModel
@{
    ViewBag.Title = "BankAccounts";
}
<br />
<br />

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.NewCurrency, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.NewCurrency, Model.CurrencyList, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NewCurrency, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2">
            <input type="submit" value="Open account" class="=" btn btn-default />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}