@model CryptoWallet.Models.DepositViewModel
@{
    ViewBag.Title = "Deposit";
}

<h2>Deposit in EUR</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(u => u.Amount, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(u => u.Amount, new {type = "number",  @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Amount, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2">
            <input type="submit" value="Send" class="=" btn btn-default />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}